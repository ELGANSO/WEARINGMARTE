<div class="box-account box-recent">
<?php $_orders = $this->getOrders(); ?>
    <div class="account-title">
        <h1><?php echo $this->__('Recent Orders') ?></h1>
    </div>
    <div class="orders">
<?php if( sizeof($_orders->getItems()) > 0 ): ?>
            <?php foreach ($_orders as $_order): ?>
            	<?php
            		$qty =  floor($_order->getData('total_qty_ordered'));
            		if($qty > 1) $text = "artículos"; else $text = "artículo";
            		$date = explode("/",$this->formatDate($_order->getCreatedAtStoreDate()));
            		$month = $this->__(date('F',strtotime($this->formatDate($_order->getCreatedAtStoreDate()))));
            		$de = $this->__("");//Han pedido quitar el de
            	 ?>
                <div class="row item">
                    <div class="col-lg-2 col-md-2 col-xs-4"><?php echo "#".$_order->getRealOrderId() ?></div>
                    <div class="col-lg-3 col-md-3 col-xs-5 date"><span class="nobr"><?php echo $date[0]." ".$de." ".$month." ".$date[2];  ?></span></div>
                    <div class="col-lg-2 col-md-2 col-xs-3"><span><?php echo $_order->getStatusLabel() ?></span></div>
                    <div class="col-lg-4 col-md-4 col-xs-6">
                    	<?php echo $_order->formatPrice($_order->getGrandTotal()) ?> -
                    	<?php echo $qty." ".$this->__($text);?>	
                	</div>
                    
                    <div class="col-lg-1 col-md-1 col-xs-6" class="a-center">
                        <a class="view" href="javascript:void(0)" data-value="<?php echo str_replace('view','ajax',$this->getViewUrl($_order)) ?>"><?php echo $this->__('View') ?></a>
                        
                    </div>
                </div>
            <?php endforeach; ?>
            <div class="row item"></div>
            <div class="view-all">
            <?php if( sizeof($_orders->getItems()) > 0 ): ?><a href="<?php echo $this->getUrl('sales/order/history') ?>"><?php echo $this->__('View All') ?></a><?php endif; ?>
        	</div>
</div>
   <div class="order"></div>
<?php else: ?>
    <p><?php echo $this->__('You have placed no orders.'); ?></p>
<?php endif; ?>
</div>
<script type="text/javascript">
	jQuery(document).ready(function(){
		jQuery('.view').on("click",function(){
			var url = jQuery(this).attr('data-value');

			jQuery.get(url, function(data, status){
        		jQuery(".order").html(data);
        		jQuery(".orders").hide();
        		jQuery(".order").fadeIn("slow");

    		});
			
		});
	});
</script>