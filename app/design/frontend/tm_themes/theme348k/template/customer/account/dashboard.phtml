<script type="text/javascript">
    jQuery(document).ready(function(){

        //Gestiona menu lateral
        jQuery(".account-menu li").click(function(){

            var id = jQuery(this).parent().find(".active").attr('data-value');
            var newId = jQuery(this).attr('data-value');

            if(id != undefined){
                if(id == ".box-recent"){
                    //Oculto el pedido individual
                    jQuery(".order").hide();
                    jQuery(".orders").fadeIn("slow");
                }
                jQuery(this).parent().parent().parent().find(id).hide();
                jQuery(this).parent().find(".active").removeClass("active");
                jQuery(this).parent().find(".glyphicon-play").removeClass("glyphicon-play");
            }
            else{
                jQuery(this).parent().parent().parent().find('.welcome-msg').hide();
            }

            jQuery(this).addClass('active');
            jQuery(this).find("span").addClass('glyphicon-play');
            jQuery(this).parent().parent().parent().find(newId).fadeIn('slow');
        });

        //Gestiona menu mvóil
        jQuery(".account-menu-mobile").click(function(){

          if(jQuery('.account-menu').is(':visible')){
              jQuery(".account-menu-mobile").css('border-bottom','2px solid #ccc');
              jQuery(this).removeClass('active');
              jQuery(this).find('span').removeClass('glyphicon-chevron-up');
              jQuery(this).find('span').addClass('glyphicon-chevron-down');
              jQuery("#logout").css("bottom","-20px");
              jQuery('.account-menu').fadeOut('fast');
          }else{
              jQuery(".account-menu-mobile").css('border-bottom','none');
              jQuery(this).addClass('active');
              jQuery(this).find('span').removeClass('glyphicon-chevron-down');
              jQuery(this).find('span').addClass('glyphicon-chevron-up');
              jQuery("#logout").css("bottom","-30px");
              jQuery('.account-menu').fadeIn('slow');
          }
        });

        //Si viene por parametro la secci�n que quiere ver, la activo
        var show = getParameterByName('show');
        console.log(show.length);
        if(show.length > 0){
            console.log(jQuery('.account-menu '+show));
            jQuery('.account-menu li[data-value="'+show+'"]').click();
        }
    });



    function getParameterByName(name, url) {
        if (!url) url = window.location.href;
        name = name.replace(/[\[\]]/g, "\\$&");
        var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
            results = regex.exec(url);
        if (!results) return null;
        if (!results[2]) return '';
        return decodeURIComponent(results[2].replace(/\+/g, " "));
    }
</script>