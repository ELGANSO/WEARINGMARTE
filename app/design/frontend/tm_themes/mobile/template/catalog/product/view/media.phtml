<script>

    jQuery(window).load(function () {
        /* Click en miniaturas de la galería de la ficha de producto */
        jQuery('.thumb-link').click(function(){
            jQuery('.product-image-gallery .visible').removeClass('visible');
            var id = jQuery(this).attr('data-image-index');
            jQuery('#image-'+id).addClass('visible');
        });
    });

    //Cambio imágenes hacía atrás
    jQuery( ".product-image-gallery img" ).on( "swiperight", function(){

        jQuery('.product-image-gallery .visible').removeClass('visible');
        jQuery('.more-views-mov .active').removeClass('active');
        var id = jQuery(this).attr('id').substring(6);
        if(id == 'main') id = 0;
        id = parseInt(id)-1;
        if(id < 0 ) id = (jQuery('.product-image-gallery img').length -2);
        console.log(id);
        jQuery('#image-'+id).addClass('visible');
        jQuery('.more-views-mov .thumb-link[data-image-index="'+id+'"]').addClass('active');
    } );

    //Cambio imágenes hacía delante
    jQuery( ".product-image-gallery img" ).on( "swipeleft", function(){

        jQuery('.product-image-gallery .visible').removeClass('visible');
        jQuery('.more-views-mov .active').removeClass('active');
        console.log(jQuery(this).attr('id'));
        var id = jQuery(this).attr('id').substring(6);
        console.log(id);
        if(id == 'main') id = 0;
        id = parseInt(id)+1;
        if(id >= (jQuery('.product-image-gallery img').length -1)) id = 0;

        jQuery('#image-'+id).addClass('visible');
        jQuery('.more-views-mov .thumb-link[data-image-index="'+id+'"]').addClass('active');
    } );
</script>
